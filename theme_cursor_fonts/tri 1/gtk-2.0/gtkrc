			stretch			= TRUE
			arrow_direction		= RIGHT
		}

###################### STEPPERS - LEFT ######################

		image 
		{
			function		= STEPPER
			recolorable		= TRUE
			state			= NORMAL
			file			= "Scrollbars/stepper-left.png"
