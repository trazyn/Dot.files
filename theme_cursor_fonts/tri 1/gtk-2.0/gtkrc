		}

		image 
		{
			function		= STEPPER
			recolorable		= TRUE
			state			= PRELIGHT
			file			= "Scrollbars/stepper-down-prelight.png"
			border			= { 2, 2, 2, 2 }
			stretch			= TRUE
			arrow_direction		= DOWN
		}

		image 
		{
			function		= STEPPER
			recolorable		= TRUE
			state			= ACTIVE
			file			= "Scrollbars/stepper-down-prelight.png"
			border			= { 2, 2, 2, 2 }
			stretch			= TRUE
			arrow_direction		= DOWN
		}

		image 
		{
			function		= STEPPER
			recolorable		= TRUE
			state			= INSENSITIVE
			file			= "Scrollbars/empty.png"
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			arrow_direction		= DOWN
		}

###################### STEPPERS - RIGHT ######################

		image 
		{
			function		= STEPPER
			recolorable		= TRUE
			state			= NORMAL
			file			= "Scrollbars/stepper-right.png"
			border			= { 2, 2, 2, 2 }
			stretch			= TRUE
			arrow_direction		= RIGHT
		}

