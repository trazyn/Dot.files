style "nautilus-mode-button"
{
	xthickness	= 0
	ythickness	= 0

	bg[NORMAL]	= shade (1.02, @bg_color)
	bg[PRELIGHT]	= mix (0.9, @bg_color, @selected_bg_color)
	bg[SELECTED]	= shade (0.85, @bg_color)
}

style "nautilus-toolbar" = "theme-toolbar"
{
	xthickness	= 1
	ythickness	= 1
}

style "nautilus-menubar" = "theme-menubar"
{
	xthickness	= 1
	ythickness	= 1
}

style "nautilus-emblem" = "theme-thin"
{
	bg[NORMAL]	= @bg_color
}

style "nautilus-tree-sidebar" = "theme-thin"
{
	GtkWidget	::focus-line-width	= 1

	font_name	= "Regular"

	base[NORMAL]	= @bg_color
	base[ACTIVE]	= shade (0.8, @bg_color)
	base[SELECTED]	= @selected_bg_color

	text[ACTIVE]	= @fg_color
	text[SELECTED]	= @selected_fg_color

	engine "mist"
	{
	}
}

style "nautilus-panes"
{
	GtkPaned	::handle-size	= 3

	bg[NORMAL]	= @bg_color

	engine "pixmap"
	{
		image
		{
			function		= HANDLE
			file			= "Handles/handle-nautilus-twinview.png"
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			orientation		= VERTICAL
		}
	}
}

style "nautilus-navigation-buttons"
{	
	GtkButton	::child-displacement-y		= 0
	GtkButton	::child-displacement-X		= 0
	GtkButton	::inner-border			= { 3, 3, 0, 0}

	engine "pixmap"
	{	
		image
		{
			function        	= BOX
			shadow				= OUT
			recolorable     	= TRUE
			state				= PRELIGHT
			file				= "Breadcrumbs/breadcrumb-normal.png"
			border				= { 0, 0, 2, 2 }
			stretch         	= TRUE
		}		

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			shadow				= IN
			state				= PRELIGHT
			file				= "Breadcrumbs/breadcrumb-active.png"
			border				= { 2, 1, 2, 1 }
			stretch         	= TRUE
		}
	  
		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state				= NORMAL
			file				= "Breadcrumbs/breadcrumb-normal.png"
			border				= { 0, 0, 2, 2 }
			stretch         	= TRUE
		}
		
		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state				= PRELIGHT
			file				= "Breadcrumbs/breadcrumb-active.png"
			border				= { 2, 1, 2, 1 }
			stretch         	= TRUE
		}
	

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state				= ACTIVE
			file				= "Breadcrumbs/breadcrumb-active.png"
			border				= { 2, 1, 2, 1 }
			stretch         	= TRUE
		}  

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state				= INSENSITIVE
			file				= "Breadcrumbs/breadcrumb-normal.png"
			border				= { 0, 0, 2, 2 }
			stretch         	= TRUE
		} 

		image
		{
			function        	= BOX
			recolorable     	= TRUE
			state				= SELECTED
			file				= "Breadcrumbs/breadcrumb-active.png"
			border				= { 2, 1, 2, 1 }
			stretch         	= TRUE
		}
	}
}

