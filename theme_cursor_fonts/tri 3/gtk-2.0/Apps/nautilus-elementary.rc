			arrow_direction		= DOWN
		}
	} */
}

style "nautilus-handle"
{
	GtkPaned	::handle-size	= 2

	engine "pixmap"
	{
		image
		{
			function	= HANDLE
			file		= "Handles/handle-nautilus.png"
			border		= { 0, 0, 0, 0 }
			stretch		= TRUE
			orientation	= VERTICAL
		}
	}
}

style "nautilus-statusbar" = "theme-default"
{
	xthickness	= 2

	engine "murrine"
	{
	}
}

style "nautilus-scrollbar" = "theme-thin"
{
	GtkScrollbar	::slider-width		= 11
	GtkScrollbar	::trough-border		= 5
	GtkScrollbar	::has-backward-stepper	= 0
	GtkScrollbar	::has-secondary-backward-stepper	= 0
	GtkScrollbar	::has-forward-stepper	= 0
	GtkScrollbar	::has-secondary-forward-stepper		= 0

	engine "pixmap"
	{

################## TROUGH ##################

		image 
		{
			function		= BOX
			recolorable		= TRUE
			detail			= "trough"
			file			= "Scrollbars/empty-fm.png"
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			orientation		= HORIZONTAL
		}

		image 
		{
			function		= BOX
			recolorable		= TRUE
			detail			= "trough"
			file			= "Scrollbars/empty-fm.png"
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			orientation		= VERTICAL
		}

################## SLIDERS - HORIZONTAL ##################

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= NORMAL
			file			= "Scrollbars/slider-horiz-fm.png" 
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			orientation		= HORIZONTAL
		}

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= ACTIVE
			file			= "Scrollbars/slider-horiz-prelight-fm.png" 
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			orientation		= HORIZONTAL
		}

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= PRELIGHT
			file			= "Scrollbars/slider-horiz-prelight-fm.png" 
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			orientation		= HORIZONTAL
		}

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= INSENSITIVE
			file			= "Scrollbars/slider-horiz-fm.png" 
			border			= { 0, 0, 0, 0 }
			stretch			= TRUE
			orientation		= HORIZONTAL
		}

################## SLIDERS - VERTICAL ##################

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= NORMAL
			file			= "Scrollbars/slider-vert-fm.png" 
			border			= { 3, 3, 3, 3 }
			stretch			= TRUE
			orientation		= VERTICAL
		}

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= ACTIVE
			file			= "Scrollbars/slider-vert-prelight-fm.png" 
			border			= { 3, 3, 3, 3 }
			stretch			= TRUE
			orientation		= VERTICAL
		}

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= PRELIGHT
			file			= "Scrollbars/slider-vert-prelight-fm.png" 
			border			= { 3, 3, 3, 3 }
			stretch			= TRUE
			orientation		= VERTICAL
		}

		image 
		{
			function		= SLIDER
			recolorable		= TRUE
			state			= INSENSITIVE
			file			= "Scrollbars/slider-vert-fm.png" 
			border			= { 3, 3, 3, 3 }
			stretch			= TRUE
			orientation		= VERTICAL
		}
	}
}

